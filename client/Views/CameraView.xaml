<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="client.Views.CameraView"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:shapes="clr-namespace:Microsoft.Maui.Controls.Shapes;assembly=Microsoft.Maui.Controls"
             xmlns:vlc="clr-namespace:LibVLCSharp.MAUI;assembly=LibVLCSharp.MAUI"
             Title="카메라"
             Shell.NavBarIsVisible="False">
        

    <Grid Padding="0" Margin="0" BackgroundColor="Black">
        <!-- 실영상 -->
        <vlc:VideoView x:Name="VlcView" />

        <!-- 로딩 표시 (선택) -->
        <ActivityIndicator IsRunning="{Binding IsBuffering}"
                       IsVisible="{Binding IsBuffering}"
                       VerticalOptions="Center" HorizontalOptions="Center" />

        <!-- 뒤로가기 버튼-->
        <Border HorizontalOptions="Start" VerticalOptions="Start" Margin="12,12,0,0" BackgroundColor="#66000000" StrokeThickness="0" Padding="6" WidthRequest="40" HeightRequest="40" StrokeShape="RoundRectangle 20">
            <shapes:Path Stroke="White" StrokeThickness="3" Data="M24,8 L10,20 L24,32" Aspect="Uniform" HorizontalOptions="Center" VerticalOptions="Center"/>
            <Border.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding GoBackCommand}"/>
            </Border.GestureRecognizers>
        </Border>

        <!-- Camera View -->
        <!--
        <Border Stroke="#333" StrokeThickness="1" HorizontalOptions="Center" VerticalOptions="Center">
            <Grid>
                <Label Text="카메라 연결 요망" TextColor="#aaaaaa" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>
            </Grid>
        </Border>
        -->
    </Grid>
</ContentPage>