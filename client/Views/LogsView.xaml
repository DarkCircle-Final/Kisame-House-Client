<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
x:Class="client.Views.LogsView"
Title="장치 상태">


    <VerticalStackLayout Padding="10">


        <!-- CarouselView -->
        <CarouselView x:Name="LogsCarousel"
ItemsSource="{Binding LogBlocks}"
Position="{Binding CarouselPosition, Mode=TwoWay}"
IsSwipeEnabled="True"
PeekAreaInsets="30">
            <CarouselView.ItemTemplate>
                <DataTemplate>
                    <VerticalStackLayout>


                        <Label Text="{Binding Timestamp}" FontSize="12"
TextColor="Gray" HorizontalOptions="Center" />


                        <!-- Top Row -->
                        <Grid ColumnDefinitions="*,*,*,*">
                            <CollectionView ItemsSource="{Binding TopRow}" ItemsLayout="HorizontalList">
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <Frame BackgroundColor="{Binding BackgroundColor}" Margin="5" Padding="10">
                                            <VerticalStackLayout>
                                                <Label Text="{Binding Name}" FontAttributes="Bold" />
                                                <Label Text="{Binding Status}" />
                                            </VerticalStackLayout>
                                        </Frame>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                        </Grid>


                        <!-- Bottom Row -->
                        <Grid ColumnDefinitions="*,*,*,*">
                            <CollectionView ItemsSource="{Binding BottomRow}" ItemsLayout="HorizontalList">
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <Frame BackgroundColor="{Binding BackgroundColor}" Margin="5" Padding="10">
                                            <VerticalStackLayout>
                                                <Label Text="{Binding Name}" FontAttributes="Bold" />
                                                <Label Text="{Binding Status}" />
                                            </VerticalStackLayout>
                                        </Frame>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                        </Grid>


                    </VerticalStackLayout>
                </DataTemplate>
            </CarouselView.ItemTemplate>
        </CarouselView>


        <!-- IndicatorView (Optional) -->
        <IndicatorView x:Name="LogIndicator"
IndicatorColor="LightGray"
SelectedIndicatorColor="Black"
HorizontalOptions="Center"
Margin="0,10" />


    </VerticalStackLayout>
</ContentPage>